surfaces
{
    type            	surfaces;
    libs            	("libsampling.so");
    executeControl      onEnd;
    writeControl        onEnd;

    surfaceFormat   raw;
    fields          (pMean UMean kMean nutMean);

    interpolationScheme cellPoint;

    surfaces
    (
        zNormal
        {
            type            cuttingPlane;
            planeType       pointAndNormal;
            pointAndNormalDict
            {
                point   (0 0 0);
                normal  (0 0 1);
            }
            interpolate     true;
        }

        yNormal
        {
            type            cuttingPlane;
            planeType       pointAndNormal;
            pointAndNormalDict
            {
                point   (0 0.1 0);
                normal  (0 1 0);
            }
            interpolate     true;
        }

        yHalf
        {
            type            cuttingPlane;
            planeType       pointAndNormal;
            pointAndNormalDict
            {
                point   (0 0.5 0);
                normal  (0 1 0);
            }
            interpolate     true;
        }

    );
}


