FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

FoamFile
{
 version 2;
 format ascii;
 class dictionary;
 object "skinFriction";
}

wallShearStress
    {
        type            wallShearStress;
        libs            ("libfieldFunctionObjects.so");
        log             yes;
        executeControl  onEnd;
        writeControl    onEnd;
    }


WSS-surfaces
{
    type            	surfaces;
    libs            	("libsampling.so");
    executeControl      onEnd;
    writeControl        onEnd;
    surfaceFormat       raw;
    fields              (wallShearStress);
    interpolationScheme cellPatchConstrained;

    surfaces
    (
        walls
        {
            type            patch;
            patches         ( "CUBE." "WALL" );
        }
    );
}


WSS-lines
{
    type            	sets;
    libs            	("libsampling.so");
    executeControl      onEnd;
    writeControl        onEnd;
    setFormat   	    raw;
    fields          	(wallShearStress);
    interpolationScheme cellPatchConstrained;

    sets
    (
        ws1
	    {
		    type	midPoint;
		    axis  	x;
		    start	(0 0 0);
		    end	    (2 0 0);
	    }

        ws2
        {
                type    midPoint;
                axis    y;
                start   (2 0 0);
                end     (2 1 0);
        }

        ws3
        {
                type    midPoint;
                axis    x;
                start   (2 1 0);
                end     (3 1 0);
        }

        ws4
        {
                type    midPoint;
                axis    y;
                start   (3 1 0);
                end     (3 0 0);
        }

        ws5
        {
                type    midPoint;
                axis    x;
                start   (3 0 0);
                end     (7 0 0);
        }

        ws6
        {
                type    midPoint;
                axis    y;
                start   (7 0 0);
                end     (7 1 0);
        }

        ws7
        {
                type    midPoint;
                axis    x;
                start   (7 1 0);
                end     (8 1 0);
        }

        ws8
        {
                type    midPoint;
                axis    y;
                start   (8 1 0);
                end     (8 0 0);
        }

        ws3
        {
                type    midPoint;
                axis    x;
                start   (8 0 0);
                end     (14 0 0);
        }

    );
}

